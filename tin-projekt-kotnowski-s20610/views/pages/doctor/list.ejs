<%- include('../../fragments/header.ejs') %>
<main>
  <h2>Lista lekarzy</h2>
  <div style="overflow-x: auto">
  <table class="table-list">
    <tr>
      <th>Imię</th>
      <th>Nazwisko</th>
      <th class="doctor-email-column">E-mail</th>
      <th>Akcje</th>
    </tr>
    <tbody>
    <% for(let doctor of doctors){%>
    <tr>
      <td><%= doctor.firstName%></td>
      <td><%= doctor.lastName%></td>
      <td class="doctor-email-column"><%= doctor.email%></td>
      <td>
        <ul class="list-actions">
          <li>
            <a href="/doctors/details/<%=doctor._id%>" class="list-actions-button-details">Szczegóły</a>
          </li>
          <li>
            <a href="/doctors/edit/<%=doctor._id%>" class="list-actions-button-edit">Edytuj</a>
          </li>
          <li>
            <a href="/doctors/delete/<%=doctor._id%>" class="list-actions-button-delete">Usuń</a>
          </li>
        </ul>
      </td>
    </tr>
    <%}%>
    </tbody>
  </table>
  </div>
  <p><a href="/doctors/add" class="button-add">Dodaj nowego lekarza</a> </p>
</main>
<%- include('../../fragments/footer.ejs') %>