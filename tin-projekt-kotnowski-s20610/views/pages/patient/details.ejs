        <textarea id="chronic_diseases" name="chronic_diseases" rows="5" cols="40" disabled>Podwyższone ciśnienie</textarea>
        <span id="errorChronicDiseases"></span>

        <label for="pesel">PESEL: *</label>
        <input type="text" name="pesel" id="pesel" value="00000000000" disabled>
        <span id="errorPesel"></span>
        <div>
            <a href="form-edit.html" class="list-actions-button-edit">Edytuj</a>
        </div>
    </form>
    <h2>Szczegóły wizyt</h2>
