<%- include('../../fragments/header.ejs') %>
<main>
  <h2>Lista pacjentów</h2>
  <table class="table-list">
    <tr>
      <th>Imię</th>
      <th>Nazwisko</th>
      <th>Akcje</th>
    </tr>
    <tbody>
    <% for(let patient of patients){%>
      <tr>
      <td><%= patient.firstName%></td>
      <td><%= patient.lastName%></td>
      <td>
        <ul class="list-actions">
          <li>
            <a href="/patients/details/<%=patient._id%>" class="list-actions-button-details">Szczegóły</a>
          </li>
          <li>
            <a href="/patients/edit/<%=patient._id%>" class="list-actions-button-edit">Edytuj</a>
          </li>
          <li>
            <a href="/patients/delete/<%=patient._id%>" class="list-actions-button-delete">Usuń</a>
          </li>
        </ul>
      </td>
    </tr>
    <%}%>
    </tbody>
  </table>
  <p><a href="/patients/add" class="button-add">Dodaj nowego pacjenta</a> </p>
</main>
<%- include('../../fragments/footer.ejs') %>