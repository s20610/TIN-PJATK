<%- include('../../fragments/header.ejs') %>
<main>
  <h2>Lista specjalizacji</h2>
  <table class="table-list">
    <tr>
      <th>Nazwa specjalizacji</th>
      <th>Akcje</th>
    </tr>
    <tbody>
    <% for(let spec of specializations){%>
      <tr>
      <td><%= spec.specializationName%></td>
      <td>
        <ul class="list-actions">
          <li>
            <a href="/specializations/details/<%=spec._id%>" class="list-actions-button-details">Szczegóły</a>
          </li>
          <li>
            <a href="/specializations/edit/<%=spec._id%>" class="list-actions-button-edit">Edytuj</a>
          </li>
          <li>
            <a href="/specializations/delete/<%=spec._id%>" class="list-actions-button-delete">Usuń</a>
          </li>
        </ul>
      </td>
    </tr>
    <%}%>
    </tbody>
  </table>
  <p><a href="/specializations/add" class="button-add">Dodaj nową specjalizację</a></p>
</main>
<%- include('../../fragments/footer.ejs') %>