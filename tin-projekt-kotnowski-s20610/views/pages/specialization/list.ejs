<%- include('../../fragments/header.ejs') %>
<main>
  <h2><%= __('specializations.list.pageTitle') %></h2>
  <table class="table-list">
    <tr>
      <th><%= __('specializations.fields.specializationName') %></th>
      <th><%= __('list.actions.title') %></th>
    </tr>
    <tbody>
    <% for(let spec of specializations){%>
      <tr>
      <td><%= spec.specializationName%></td>
      <td>
        <ul class="list-actions">
          <li>
            <a href="/specializations/details/<%=spec._id%>" class="list-actions-button-details"><%= __('list.actions.details') %></a>
          </li>
          <li>
            <a href="/specializations/edit/<%=spec._id%>" class="list-actions-button-edit"><%= __('list.actions.edit') %></a>
          </li>
          <li>
            <a href="/specializations/delete/<%=spec._id%>" class="list-actions-button-delete"><%= __('list.actions.delete') %></a>
          </li>
        </ul>
      </td>
    </tr>
    <%}%>
    </tbody>
  </table>
  <p><a href="/specializations/add" class="button-add"><%= __('specializations.list.addNew') %></a></p>
</main>
<%- include('../../fragments/footer.ejs') %>